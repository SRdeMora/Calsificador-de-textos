<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Clasificador de Textos</title>
  <style>
    body { font-family: sans-serif; padding: 2rem; background: #f5f5f5; }
    textarea { width: 100%; height: 150px; margin-bottom: 1rem; }
    button { padding: 0.5rem 1rem; }
    #resultado { margin-top: 1rem; font-weight: bold; }
  </style>
</head>
<body>
  <h1>Clasificador de Textos</h1>
  <textarea id="texto" placeholder="Escribe tu texto aquí..."></textarea>
  <button onclick="clasificarTexto()">Clasificar</button>
  <div id="resultado"></div>

  <script>
    async function clasificarTexto() {
      const texto = document.getElementById('texto').value;
      const respuesta = await fetch('https://calsificador-de-textos.onrender.com', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ text: texto })
      });
      const data = await respuesta.json();
      document.getElementById('resultado').innerText = 'Categoría: ' + data.category;
    }
  </script>
</body>
</html>
